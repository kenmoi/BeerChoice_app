



<div class="container">
  <div class="row mx-auto">
    <div class="main-title col-md-11">
      <h2 class="page-title">
        <span class="post">投稿一覧</span>
      </h2>
      <div class="list">
      <% @beers.each do |beer| %>
        <div class="list_item">
          <div class="beer_image">
            <%= link_to beer_path(beer.id), 'data-turbolinks': false do %>
             <%= attachment_image_tag beer, :image, :fill, 200, 200, fallback: "no_image.jpg", size:'200x200' %>
            <% end %>
          </div>
          <div class="text">
            <h2 class="item_title"><%= beer.name %></h2>
            <span class="user_name">by <%= beer.user.name %></span>
            <div class="beer_feature"><%= beer.feature %></div>
            <div class="beer_style">スタイル：<%= beer.style %></div>
            <div class="item_create"><%= beer.created_at.strftime('%Y/%m/%d %H:%M:%S') %> 投稿</div>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>
